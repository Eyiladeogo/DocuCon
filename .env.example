# .env.example
# Database URL for the FastAPI app to connect to the PostgreSQL service within Docker
DATABASE_URL=postgresql+asyncpg://myuser:mypassword@db:5432/document_db

# Optional: Define these explicitly if you want to override the defaults in docker-compose.yml
DB_NAME=document_db
DB_USER=myuser
DB_PASSWORD=mypassword

SECRET_KEY=your-very-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
LOG_LEVEL=INFO

# For testing, remember to keep TEST_DATABASE_URL separate if you run tests outside Docker
TEST_DATABASE_URL=postgresql+asyncpg://myuser:mypassword@localhost:5432/test_document_db